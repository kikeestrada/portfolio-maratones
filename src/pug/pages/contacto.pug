extends ../includes/layout.pug
include ../includes/components/header_video.pug
include ../includes/components/social_media.pug
include ../includes/components/contact_form.pug
block metatags
  -var title = 'Contacto - M A R A T Ó N'
  -var description = '¿Te gusto este sitio? Déjanos tus comentarios y visita nuestras redes sociales.'
  title= title
  meta(name="description", content=description)
  meta(name="application-name", content=title)
block content
  main.Contact
    section.Contact-video
      +headerVideo('contacto-runner', '¿Te gustó este sitio?', 'Déjanos tus comentarios y visita nuestras redes sociales.')
    section.Contact-info
      +contactForm()
      +socialMedia([ ['github', '#'], ['youtube', '#'], ['envelope', ''], ['twitter', ''], ['codepen', ''] ])
    section.GoogleMap
